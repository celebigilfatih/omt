// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Başvuru durumları için enum
enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

// Yaş grupları için enum
enum AgeGroup {
  Y2012
  Y2013
  Y2014
  Y2015
  Y2016
  Y2017
  Y2018
  Y2019
  Y2020
  Y2021
  Y2022
}

// Etap bilgileri için enum
enum Stage {
  STAGE_1
  STAGE_2
}

// Takım başvuruları tablosu
model TeamApplication {
  id          String            @id @default(cuid())
  teamName    String
  coachName   String
  phoneNumber String
  website     String?
  instagram   String?
  twitter     String?
  facebook    String?
  stage       Stage
  ageGroups   AgeGroup[]
  description String?
  logoUrl     String?
  status      ApplicationStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Onaylandığında Team tablosuna aktarılır
  approvedTeam Team?

  @@map("team_applications")
}

// Kesin katılımcı takımlar tablosu
model Team {
  id               String     @id @default(cuid())
  teamName         String
  coachName        String
  phoneNumber      String
  stage            Stage
  ageGroups        AgeGroup[]
  description      String?
  logoUrl          String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  
  // Başvuru ile ilişki (opsiyonel, manuel eklenen takımlar için)
  applicationId    String?    @unique
  application      TeamApplication? @relation(fields: [applicationId], references: [id])

  @@map("teams")
}

// Yönetici kullanıcıları tablosu
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// Sistem ayarları tablosu
model Settings {
  id                    String  @id @default(cuid())
  registrationOpen      Boolean @default(true)
  maxTeamsPerStage      Int     @default(32)
  allowedAgeGroups      AgeGroup[]
  availableStages       Stage[]
  notificationEmail     String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("settings")
}
