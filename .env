DATABASE_URL="postgresql://postgres:postgres123@localhost:5450/omt_tournament?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-this-in-production"

